{% extends 'base.html.twig' %}

{% block body %}
    <div id="colnmelphotos" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#colnmelphotos" data-slide-to="0" class="active"></li>
            <li data-target="#colnmelphotos" data-slide-to="1"></li>
            <li data-target="#colnmelphotos" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                {% image '@AppBundle/Resources/images/melncol1.jpg' %}
                <img class="first-slide" src="{{ asset_url }}" alt="Mel and Colin">
                {% endimage %}
                <div class="container">
                    <div class="carousel-caption">
                        <h2>Melanie & Colin are getting married</h2>
                    </div>
                </div>
            </div>
            <div class="item">
                {% image '@AppBundle/Resources/images/melncol2.jpg' %}
                <img class="second-slide" src="{{ asset_url }}" alt="Mel and Colin">
                {% endimage %}
                <div class="container">
                    <div class="carousel-caption">
                        <h2>Melanie & Colin are getting married</h2>
                    </div>
                </div>
            </div>
            <div class="item">
                {% image '@AppBundle/Resources/images/melncol3.jpg' %}
                <img class="third-slide" src="{{ asset_url }}" alt="Mel and Colin">
                {% endimage %}
                <div class="container">
                    <div class="carousel-caption">
                        <h2>Melanie & Colin are getting married</h2>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#colnmelphotos" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#colnmelphotos" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %}
