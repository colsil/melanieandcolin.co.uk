{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.includeInvitedDayGuests, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
            <div class="col-sm-10 col-lg-10">
                {{ form_widget(form.includeInvitedDayGuests, { 'attr': { 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.includeAttendingDayGuests, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
            <div class="col-sm-10 col-lg-10">
                {{ form_widget(form.includeAttendingDayGuests, { 'attr': { 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.includeInvitedEveningGuests, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
            <div class="col-sm-10 col-lg-10">
                {{ form_widget(form.includeInvitedEveningGuests, { 'attr': { 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.includeAttendingEveningGuests, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
            <div class="col-sm-10 col-lg-10">
                {{ form_widget(form.includeAttendingEveningGuests, { 'attr': { 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.emailSubject, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
            <div class="col-sm-10 col-lg-10">
                {{ form_widget(form.emailSubject, { 'attr': { 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.emailContent, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
            <div class="col-sm-10 col-lg-10">
                {{ form_widget(form.emailContent, { 'attr': { 'class': 'form-control', 'rows' : '10'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.sendEmail, { 'attr': { 'class' : 'col-lg-10 col-lg-offset-2 btn btn-success'}}) }}
        </div>
        {{ form_end(form) }}
    </div>

{% endblock body %}
