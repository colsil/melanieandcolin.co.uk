{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
