                {{ form_widget(form.attendingevening, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.masterguest, null, { 'label_attr': {'class': 'col-sm-2 col-lg-2 control-label required'} }) }}
            <div class="col-sm-10 col-lg-10">
                {{ form_widget(form.masterguest, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                {{ form_widget(form.saveguest, { 'attr': { 'class' : 'col-lg-10 col-lg-offset-2 btn btn-success'}}) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
