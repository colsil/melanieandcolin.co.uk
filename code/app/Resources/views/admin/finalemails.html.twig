{% extends 'base.html.twig' %}
{% block body %}
    <pre>
        {% for guest in guests %}
            {%- if not guest.masterGuest -%}
                {{ guest.name }},{{ guest.surname }},{{ guest.email }},
                {%- if guest.rsvpReceived == 1 %}yes{% else %}no{% endif %},
                {%- if guest.dietary %}{{ guest.dietary }}{% else %}None{% endif %},
                {%- if guest.vegetarian == 0 %}no{% else %}yes{% endif -%}
                {%- for plusone in guest.plusOnes -%}
                    ,FirstName: {{ plusone.name }},Surname: {{ plusone.surname }},Dietary Requirements:
                    {%- if plusone.dietary %} {{ plusone.dietary }}{% else %} None{% endif %},Vegetarian Main Meal:
                    {%- if plusone.vegetarian == 0 %} no{% else %} yes{% endif -%}
                {% endfor -%}
                {%- for room in guest.rooms -%}
                    ,{{ room.number }} {{ room.type }} room(s)
                {%- endfor %}

            {% endif %}
        {% endfor %}
</pre>
{% endblock %}
