{% extends 'base.html.twig' %}

{% block body %}
    <div id="locationcontainer" class="container">
        <div class="row">
            <div class="col-lg-12">
                {% image '@AppBundle/Resources/images/missenden2.jpg' %}
                <img class="center-block" src="{{ asset_url }}" alt="Missenden Abbey">
                {% endimage %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center">Saturday 5th August 2017</h1>
                <p class="text-center text-warning">Since we are so far in advance of the day. <br/>Times are a guideline and are
                    subject to change</p>
            </div>
        </div>
        {% for time, event in timings %}
            <div class="row">
                <div class="col-lg-6">
                    <p class="text-center">{{ time }}</p>
                </div>
                <div class="col-lg-6">
                    <p class="text-center">{{ event }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
